<resources>

    <!-- 日间模式 -->
    <style name="App.Theme.Light" parent="Base.App.Theme.Light" />

    <style name="Base.App.Theme.Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorText</item>

        <!--action style-->
        <item name="actionBarStyle">@style/App.Widget.ActionBar</item>
        <item name="homeAsUpIndicator">@mipmap/btn_back_normal</item>

    </style>

    <!--action bar-->
    <style name="App.Widget.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">?attr/colorPrimary</item>
        <item name="titleTextStyle">@style/App.TextAppearance.Widget.ActionBar.Title</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="App.TextAppearance.Widget.ActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Base.App.Theme.NoTitle" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 全透明的背景 -->
    <style name="App.Theme.Transparent" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!-- button -->
    <style name="button">
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>

    </style>

    <style name="blankButton" parent="button">
        <item name="android:background">@drawable/blank_shape</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="usualButton" parent="button">
        <item name="android:background">@drawable/shap</item>
        <item name="android:textColor">@color/btn_selector</item>
    </style>

    <style name="successButton" parent="button">
        <item name="android:background">@drawable/success_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dangerButton" parent="button">
        <item name="android:background">@drawable/danger_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="warningButton" parent="button">
        <item name="android:background">@drawable/warning_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="roundButton" parent="button">
        <item name="android:background">@drawable/big_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tabButton" parent="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tabButtonFront" parent="tabButton">
        <item name="android:background">@drawable/tab_front_shape</item>
        <item name="android:textColor">@color/btntab_color</item>
    </style>

    <style name="tabButtonMiddle" parent="tabButton">
        <item name="android:background">@drawable/tab_mid_shape</item>
        <item name="android:textColor">@color/btntab_color</item>
    </style>

    <style name="tabButtonBack" parent="tabButton">
        <item name="android:background">@drawable/tab_back_shape</item>
        <item name="android:textColor">@color/btntab_color</item>
    </style>

    <style name="buttonSize" parent="button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="largeButton" parent="buttonSize">
        <item name="android:background">@drawable/large_shape</item>
    </style>

    <style name="middleButton" parent="buttonSize">
        <item name="android:background">@drawable/middle_shape</item>
    </style>

    <style name="smallButton" parent="buttonSize">
        <item name="android:background">@drawable/small_shape</item>
    </style>

    <!-- divider -->
    <style name="horizontal_divider_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/divider_width</item>
        <item name="android:background">@color/list_divider_color</item>
    </style>

</resources>
